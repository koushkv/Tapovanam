<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ch8Pt1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ch8pt1atxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:lineSpacingExtra="6dp"
                android:padding="20dp"
                android:text="@string/Content_ch8pt1a"
                android:textSize="16dp">

            </TextView>
            <TextView
                android:id="@+id/ch7pt1btitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:lineSpacingExtra="6dp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textAlignment="center"
                android:text="Rescue From Fire"
                android:textSize="25dp">
            </TextView>


            <TextView
                android:id="@+id/ch8pt1btxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:lineSpacingExtra="6dp"
                android:padding="20dp"
                android:text="@string/Content_ch8pt1b"
                android:textSize="16dp">
            </TextView>

            <TextView
                android:id="@+id/ch8pt1ctitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:lineSpacingExtra="6dp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textAlignment="center"
                android:text="Rescue From Flood"
                android:textSize="25dp">
            </TextView>

            <TextView
                android:id="@+id/ch8pt1ctxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:lineSpacingExtra="6dp"
                android:padding="20dp"
                android:text="@string/Content_ch8pt1c"
                android:textSize="16dp">
            </TextView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>