<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ch8Pt2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/ch8pt2btitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:lineSpacingExtra="6dp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textAlignment="center"
                android:text="Water Turns Into Petrol"
                android:textSize="25dp">
            </TextView>


            <TextView
                android:id="@+id/ch8pt2btxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:lineSpacingExtra="6dp"
                android:padding="20dp"
                android:text="@string/Content_ch8pt2b"
                android:textSize="16dp">
            </TextView>

            <TextView
                android:id="@+id/ch8pt2ctitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:lineSpacingExtra="6dp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textAlignment="center"
                android:text="Sunshine In The Himalayas"
                android:textSize="25dp">
            </TextView>

            <TextView
                android:id="@+id/ch8pt2ctxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:lineSpacingExtra="6dp"
                android:padding="20dp"
                android:text="@string/Content_ch8pt2c"
                android:textSize="16dp">
            </TextView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>